<% provide(:title, @user.name) %>

<div class="container">
  <h1>プロフィール</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-bordered table-hover" id="table-user">
        <tbody>
          <tr>
            <th class="active col-md-3"><%= User.human_attribute_name :id %></th>
            <td class="col-md-9"><%= @user.id %></td>
          </tr>
          <tr>
            <th class="active"><%= User.human_attribute_name :name %></th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th class="active"><%= User.human_attribute_name :email %></th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th class="active"><%= User.human_attribute_name :created_at %></th>
            <td><%= @user.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>
        </tbody>
      </table>
    </div>    
  </div>
</div>
