<div class="container">
  <h1>タスク一覧</h1>
  <div class="row">
    <div class="col-md-10 col-offset-1">
      <li><%= link_to "タスク新規作成", new_user_task_path(current_user),  class:"btn btn-lg btn-primary pull-right" %></li>
      <table class="table table-hover" id="table-tasks">
        <thead>
          <tr>
            <th>名称</th>
            <th>作成日</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
          <% @task.each do |task| %>
            <tr>
              <td><%= task.name %></td>
              <td><%= task.created_at %></td>
              <td>
                <%= link_to "編集", class="btn btn-success" %>
                <%= link_to "削除", class="btn btn-danger" %> 
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>