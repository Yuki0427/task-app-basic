<div class="container">
  <h1>タスク詳細</h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered" id="table-tasks">
        <tbody>
          <tr>
            <th class="active col-md-2"><%= Task.human_attribute_name :id %></th>
            <td><%= @task.id %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :name %></th>
            <td><%= @task.name %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :description %></th>
            <td><%= text_url_to_link(h(@task.description)).html_safe %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :created_at %></th>
            <td><%= @task.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :updated_at %></th>
            <td><%= @task.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "編集", edit_user_task_path(@user,@task), class:"btn btn-lg btn-success" %>
        <%= link_to "削除", user_task_path(@user,@task), method: :delete,
            data: { confirm: "#{@task.name}を削除します。よろしいですか？" },
            class:"btn btn-lg btn-danger" %> 
      </div>
    </div>
  </div>
</div>